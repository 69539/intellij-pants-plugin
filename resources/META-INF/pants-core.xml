<idea-plugin version="2">
    <application-components>
        <!-- Add your application components here -->
    </application-components>
    <extensions defaultExtensionNs="com.intellij">
        <fileTypeDetector implementation="com.twitter.intellij.pants.file.BUILDFileTypeDetector"/>
        <fileTypeFactory implementation="com.twitter.intellij.pants.file.PexFileTypeFactory"/>

        <!--<moduleBuilder builderClass="com.twitter.intellij.pants.service.project.wizard.PantsModuleBuilder"/>-->
        <projectImportProvider
                implementation="com.twitter.intellij.pants.service.project.wizard.PantsProjectImportProvider"/>
        <projectImportBuilder
                implementation="com.twitter.intellij.pants.service.project.wizard.PantsProjectImportBuilder"/>

        <configurationType implementation="com.twitter.intellij.pants.execution.PantsConfigurationType"/>
        <programRunner implementation="com.twitter.intellij.pants.run.PantsRunner"/>

        <externalSystemManager implementation="com.twitter.intellij.pants.PantsManager"/>

        <projectService serviceImplementation="com.twitter.intellij.pants.settings.PantsSettings"/>
        <projectService serviceImplementation="com.twitter.intellij.pants.settings.PantsLocalSettings"/>

        <completion.contributor language="Python"
                                implementationClass="com.twitter.intellij.pants.completion.PantsCompletionContributor"/>

        <localInspection language="Python" shortName="PantsLibNotFound"
                         bundle="com.twitter.intellij.pants.PantsBundle"
                         key="pants.inspection.library.not.found"
                         groupKey="inspections.group.name" enabledByDefault="true"
                         implementationClass="com.twitter.intellij.pants.inspections.PantsLibNotFoundInspection"/>

        <localInspection language="Python" shortName="PantsLibNotConfigured"
                         bundle="com.twitter.intellij.pants.PantsBundle"
                         key="pants.inspection.library.not.configured"
                         groupKey="inspections.group.name" enabledByDefault="true"
                         implementationClass="com.twitter.intellij.pants.inspections.PantsLibNotConfiguredInspection"/>

    </extensions>
    <extensions defaultExtensionNs="Pythonid">
        <pyReferenceResolveProvider implementation="com.twitter.intellij.pants.resolve.PantsReferenceResolveProvide"/>
    </extensions>

    <actions>
    </actions>
</idea-plugin>